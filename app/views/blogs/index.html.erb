<p id="notice"><%= notice %></p>

  <h1 class="panel panel-default">blogs</h1>

  <h2 div class="btn-group newblog">
    <button type="button" class="btn btn-info"><%= link_to '投稿する', new_blog_path %></button></h2>
<table>
  <thead class="container">
    <tr class="row">
      <th class="col-md-4">title</th>
      <th class="col-md-3">content/th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="container">
    <% @blogs.each do |blog| %>
      <tr class="row well well-lg">
        <td class="col-md-4 alert-danger"><%= blog.title %></td>
        <td class="col-md-1.75 alert-info"><%= blog.content %></td>
        <td>
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default">
              <%= link_to '詳細', blog %></button>

          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default">
              <%= link_to '編集', edit_blog_path(blog) %></button>
          <% else %>
          <% end %>

          <% if blog.user_id == current_user.id %>
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default">
              <%= link_to '削除', blog, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          <% else %>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
